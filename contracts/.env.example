# Smart Contract Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ============================================
# RPC ENDPOINTS
# ============================================

# Testnet RPCs
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BOB_SEPOLIA_RPC_URL=https://testnet.rpc.gobob.xyz

# Mainnet RPCs
BASE_MAINNET_RPC_URL=https://mainnet.base.org
BOB_MAINNET_RPC_URL=https://rpc.gobob.xyz

# Local Development
ANVIL_RPC_URL=http://127.0.0.1:8545

# ============================================
# PRIVATE KEYS (NEVER SHARE THESE!)
# ============================================

# Deployer wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# For testing on local Anvil (default Anvil account #0)
# ANVIL_PRIVATE_KEY=ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ============================================
# API KEYS
# ============================================

# Etherscan/Basescan API key for contract verification
BASESCAN_API_KEY=your_basescan_api_key_here

# ============================================
# LAYERZERO CONFIGURATION
# ============================================

# LayerZero Endpoint IDs (v2)
# Base Sepolia: 40245
# Bob Sepolia: TBD - Check LayerZero docs
# Base Mainnet: 30184
# Bob Mainnet: TBD - Check LayerZero docs

# Trusted remote addresses (set after deployment)
BASE_SEPOLIA_TRUSTED_REMOTE=
BOB_SEPOLIA_TRUSTED_REMOTE=
BASE_MAINNET_TRUSTED_REMOTE=
BOB_MAINNET_TRUSTED_REMOTE=

# ============================================
# CONTRACT ADDRESSES (Fill after deployment)
# ============================================

# Testnet addresses
JOURNAL_PROXY_BASE_SEPOLIA=
JOURNAL_IMPL_BASE_SEPOLIA=
JOURNAL_PROXY_BOB_SEPOLIA=
JOURNAL_IMPL_BOB_SEPOLIA=

# Mainnet addresses
JOURNAL_PROXY_BASE_MAINNET=
JOURNAL_IMPL_BASE_MAINNET=
JOURNAL_PROXY_BOB_MAINNET=
JOURNAL_IMPL_BOB_MAINNET=

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Gas settings (optional, will use defaults if not set)
# GAS_PRICE_GWEI=
# GAS_LIMIT=

# Contract verification (set to true to auto-verify on deployment)
VERIFY_CONTRACTS=false
